<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="memberMapper">
  <resultMap type="member" id="memberResultSet">
  	<result column="USER_NO" property="userNo" />
  	<result column="USER_ID" property="userId" />
  	<result column="USER_PWD" property="userPwd" />
  	<result column="USER_NAME" property="userName" />
  	<result column="EMAIL" property="email" />
  	<result column="GENDER" property="gender" />
  	<result column="PHONE" property="phone" />
  	<result column="ENROLL_DATE" property="enrollDate" />
  	<result column="MODIFY_DATE" property="modifyDate" />
  	<result column="STATUS" property="status" />
  	<result column="OWNER_NO" property="ownerNo" />
  	<result column="USER_TYPE" property="userType" />
  </resultMap>
  
  <resultMap type="cert" id="certResultSet">
  	<result column="WHO" property="who"/>
  	<result column="CERT_NUM" property="certNum"/>
  	<result column="CERT_DATE" property="certDate"/>  	
  </resultMap>
  
  <!-- 로그인용 쿼리문 -->
  <select id="loginMember" resultMap="memberResultSet" parameterType="member">
  		SELECT 
  				USER_NO,
				USER_ID, 
				USER_PWD, 
				USER_NAME,
				EMAIL,
				GENDER,
				PHONE,
				ENROLL_DATE,
				MODIFY_DATE,
				STATUS,
				USER_TYPE
		  FROM 
				MEMBER
		 WHERE	
		 		USER_ID = #{userId}
		   AND 
		 		STATUS = 'Y'
  </select>
  
  <!-- 회원정보 수정용 쿼리문 -->
  <update id="updateMember" parameterType="member">
  	UPDATE 
  			MEMBER
  	   SET
  	   		USER_NAME = #{userName}
  	   	  , EMAIL = #{email}
  	   	  , PHONE = #{phone}
  	   	  , MODIFY_DATE = SYSDATE
  	 WHERE
  	 		USER_NO = #{userNo}
  	   AND
  			USER_ID = #{userId}
  	   AND 
  	   		STATUS = 'Y'
  </update>
  
  <!-- 메일 인증번호 저장용 쿼리문 -->
  <insert id="insertEmailCheck" parameterType="cert">
  	INSERT INTO CERT(
  			 		 WHO
  				   , CERT_NUM
  			) VALUES (
  		 	 		 #{who}
  		 		   , #{certNum}
  			)
  </insert>
  
  <select id="validate" parameterType="cert" resultMap="certResultSet">
  	SELECT 
  			WHO
  		  , CERT_NUM
  		  , CERT_DATE
  	  FROM
  	  		CERT
  	 WHERE
  	 		CERT_NUM = #{certNum}
  	   AND
  	   		WHO = #{who}
  	   AND
  	 		CERT_DATE BETWEEN CERT_DATE AND SYSDATE - 6/24/60
  		
  </select>
  
</mapper>

